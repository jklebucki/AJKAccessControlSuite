@using AJKAccessControl.Shared.DTOs

<div class="row">
    <div class="col-md-4">
        <button class="btn btn-primary" @onclick="AddUser">Dodaj u≈ºytkownika</button>
    </div>
</div>

@if (Users != null && Users.Any())
{
    <table class="table">
    <thead>
        <tr>
            <th>User name</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@(user.Email == null ? "" : user.Email)</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}

@code {
    [Parameter]
    public List<UserDto> Users { get; set; } = new List<UserDto>();
    [Parameter]
    public EventCallback AddUser { get; set; }

}
